                "trigger": "start_fly_attacking"
            },
            "start_fly_attacking": {
                "filters": {
                    "test": "int_property",
                    "domain": "billey:phase",
                    "subject": "self",
                    "value": 1
                },
                "sequence": [
                    {
                        "set_property": {
                            "billey:is_fly_attacking": true
                        }
                    },
                    {
                        "add": {
                            "component_groups": [
                                "fly_attacking"
                            ]
                        },
                        "remove": {
                            "component_groups": [
                                "not_fly_attacking",
                                "timer_to_fly_attack"
                            ]
                        }
                    }
                ]
            },
            "stop_fly_attacking": {
                "sequence": [
                    {
                        "set_property": {
                            "billey:is_fly_attacking": false
                        }
                    },
                    {
                        "remove": {
                            "component_groups": [
                                "fly_attacking",
                                "timer_to_fly_attack"
                            ]
                        },
                        "add": {
                            "component_groups": [
                                "not_fly_attacking"
                            ]
                        }
                    }
                ]
            },
