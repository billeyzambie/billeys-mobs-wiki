{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "billey:rat_crown_attachable",
            "item": {
                "billey:rat_crown": "q.owner_identifier != 'minecraft:player'"
            },
            "materials": {
                //The gems have a slight glow
                "default": "entity_emissive_alpha"
            },
            "textures": {
                "default": "textures/entity/billeys_mobs/rat_crown"
            },
            "geometry": {
                "default": "geometry.billeys_mobs.pet_chef_hat"
            },
            "animations": {
                /*makes it the same size even if the mob is scaled (eg. baby),
                looks kinda goofy at times but i like it*/
                "remove_scale": "animation.billeys_mobs.pet_hat.remove_scale"
            },
            "scripts": {
                "animate": [
                    "remove_scale"
                ]
            },
            "render_controllers": [
                "controller.render.default"
            ]
        }
    }
}